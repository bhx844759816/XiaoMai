<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="请使用手机号校验身份"
        android:textColor="@color/dialogTitleTextColor"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etInputPhone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_et_bg"
        android:hint="请输入手机号"
        android:paddingLeft="10dp"
        android:textColor="@color/defaultTextColor"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="20dp">

        <EditText
            android:id="@+id/etInputCode"
            android:layout_width="0dp"
            android:layout_height="45dp"

            android:layout_weight="11"
            android:background="@drawable/shape_et_bg"
            android:paddingLeft="10dp"
            android:textColor="@color/defaultTextColor"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvSendSmsCode"
            android:layout_width="78dp"
            android:layout_height="38dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/select_send_sms_code_bg"
            android:gravity="center"

            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="12sp">

        </TextView>


    </LinearLayout>

    <TextView
        android:id="@+id/tvProtocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="20dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape_dialog_confirm_btn_bg"
        android:gravity="center"
        android:text="登陆"
        android:textColor="@color/white"
        android:textSize="12sp" />
</LinearLayout>