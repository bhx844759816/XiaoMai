<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:lineSpacingExtra="3dp"
        android:maxLines="2"
        android:text="标题描述文字，显示不得超过32个字，显示不得超过32个字显示不得超过32个字显示不得超过32个字显示不得超过32个字做多显示两 行文字"
        android:textColor="@color/titleTextColor"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/ivUserAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_user_center_header" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/ivUserAvatar"
            android:text="不觉晓花园别墅"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@mipmap/icon_contact_user"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:text="19.9(A费)"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:visibility="gone" />
    </RelativeLayout>

    <com.lcodecore.extextview.ExpandTextView
        android:id="@+id/tvDec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="15dp"
        android:lineSpacingExtra="4dp"
        android:text="禅意轻奢极简风格"
        android:textColor="#666666"
        android:textSize="12sp"
        app:arrowAlign="center"
        app:arrowPadding="8dp"
        app:arrowPosition="below"
        app:collapseDrawable="@mipmap/icon_expand_collapse"
        app:expandDrawable="@mipmap/icon_expand"
        app:maxCollapsedLines="2" />

    <View
        style="@style/DividerLineTheme"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:text="活动详情"
        android:textColor="#333333"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/tvActivityDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:lineSpacingExtra="3dp"
        android:text="8月15日 18:30-21:00\n树青医药专修学校大门口南200米，没毛病KTV\n参与人数：15男 19女"
        android:textColor="#808080"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:text="报名截止日期"
        android:textColor="#333333"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvActivitySignUpEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:lineSpacingExtra="3dp"
        android:text="8月14日 24:00"
        android:textColor="#808080"
        android:textSize="12sp" />
    <View
        style="@style/DividerLineTheme"
        android:layout_marginTop="20dp" />
</LinearLayout>